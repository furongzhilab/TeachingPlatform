<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.second.dao.ScienceDao">
    <resultMap id="BaseResultMap" type="com.example.second.entity.Science">
        <id column="uid" property="uid" jdbcType="BIGINT"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="date" property="date" jdbcType="DATE"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
        uid, title, date, content
    </sql>

    <select id="findAllSciences" resultType="com.example.second.entity.Science">
        select * from science
    </select>

    <select id="findScienceByTitle" parameterType="java.lang.String" resultMap="BaseResultMap">
        select * from science where title = #{title,jdbcType=VARCHAR}
    </select>

    <delete id="deleteSciencesByIds">
        delete from science where uid in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <select id="getCountSciences" resultType="java.lang.Integer">
        select count(uid) as count from science
    </select>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from science
        where uid = #{uid,jdbcType=BIGINT}
    </select>
    <delete id="deleteScienceById" parameterType="java.lang.Long">
        delete from science
        where uid = #{uid,jdbcType=BIGINT}
    </delete>

    <insert id="insert" parameterType="com.example.second.entity.Science">
        insert into science (uid, title, date,
                                content)
        values (#{uid,jdbcType=BIGINT}, #{title,jdbcType=VARCHAR}, #{date,jdbcType=DATE},
                #{content,jdbcType=VARCHAR})
    </insert>
    <insert id="addScience" parameterType="com.example.second.entity.Science">
        insert into science
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uid != null">
                uid,
            </if>
            <if test="title != null">
                title,
            </if>
            <if test="date != null">
                date,
            </if>
            <if test="content != null">
                content,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uid != null">
                #{uid,jdbcType=BIGINT},
            </if>
            <if test="title != null">
                #{title,jdbcType=VARCHAR},
            </if>
            <if test="date != null">
                #{date,jdbcType=DATE},
            </if>
            <if test="content != null">
                #{content,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <update id="updateScience" parameterType="com.example.second.entity.Science">
        update science
        <set>
            <if test="title != null">
                title = #{title,jdbcType=VARCHAR},
            </if>
            <if test="date != null">
                date = #{date,jdbcType=DATE},
            </if>
            <if test="content != null">
                content = #{content,jdbcType=VARCHAR},
            </if>
        </set>
        where uid = #{uid,jdbcType=BIGINT}
    </update>
    <update id="updateByPrimaryKey" parameterType="com.example.second.entity.Science">
        update science
        set title = #{title,jdbcType=VARCHAR},
            date = #{date,jdbcType=DATE},
            content = #{content,jdbcType=VARCHAR}
        where uid = #{uid,jdbcType=BIGINT}
    </update>
</mapper>